@{
    ViewBag.Title = "Comments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["Page"] = "Comments";
}
@using AskCode.Models
<body>
    <div class="ch-container">
        <div class="row">

            <div id="content" class="col-lg-10 col-sm-10">
                <!-- content starts -->
                <div>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/Admin/Index">Home</a>
                        </li>
                        <li>
                            <a href="/Admin/Users">Users</a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well" data-original-title="">
                                <h2><i class="glyphicon glyphicon-user"></i>Users</h2>

                            </div>
                            <div class="box-content">
                                <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                                    <thead>
                                        <tr>

                                            <th>User</th>
                                            <th>Comment</th>                                           
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>


                                        @{
                                            askCodeDataEntities3 cx = new askCodeDataEntities3();
                                          bool status=false;
                                            foreach (Comment u in Model)
                                            {
                                                if (status )
                                                {
                                                    <tr>

                                                        <td>@u.CommentUsername</td>
                                                        <td class="center">@u.CommentMessage</td>
                                                        <td class="center">
                                                            
                                                           
                                                            <a class="btn btn-danger" href="/Admin/DeleteComment?id=@u.CommentId">
                                                                <i class="glyphicon glyphicon-trash icon-white"></i>
                                                                Delete
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                                status = true;
                                                
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div><!--/row-->
                <!-- content ends -->
            </div><!--/#content.col-md-0-->
        </div><!--/fluid-row-->

    </div><!--/.fluid-container-->
</body>


