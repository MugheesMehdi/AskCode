@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["Page"] = "Posts";
}
@using AskCode.Models
<body>

    <h2>@Session["eo"]</h2>
    <div class="ch-container">
        <div class="row">
         
            <div id="content" class="col-lg-10 col-sm-10">
                
                <div>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/Admin/Index">Home</a>
                        </li>
                        <li>
                            <a href="/Admin/Posts">Posts</a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well" data-original-title="">
                                <h2><i class="glyphicon glyphicon-user"></i>Posts</h2>


                            </div>
                            <div class="box-content">
                                <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                                    <thead>
                                        <tr>
                                            <th>Post Title</th>
                                            <th>Date Posted</th>
                                            <th>Comments</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>


                                    <tbody>
                                       
@{
    askCodeDataEntities3 cx = new askCodeDataEntities3();
    foreach (Post u in cx.Posts.ToList())
    {
        <tr>
            <td class="center">@u.PostTitle</td>
            <td class="center">@u.PostDateTime </td>
            <td class="center">@u.CommentCount</td>
            <td class="center">
                <a class="btn btn-danger" href="/Admin/ShowComments?id=@u.PostId">
                    <i class="glyphicon glyphicon-trash icon-white"></i>
                    Delete Comments
                </a>
                <a class="btn btn-info" href="/Admin/EditPost?id=@u.PostId">
                    <i class="glyphicon glyphicon-edit icon-white"></i>
                    Edit
                </a>
                <a class="btn btn-danger" href="/Admin/DeletePost?id=@u.PostId">
                    <i class="glyphicon glyphicon-trash icon-white"></i>
                    Delete Post
                </a>
            </td>
        </tr>
    }
}                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                  
                </div>
               
            </div>
        </div>

    </div>
</body>