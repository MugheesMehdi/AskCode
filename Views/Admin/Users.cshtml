@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["Page"] = "Users";
}
@using AskCode.Models
<body>
    <div class="ch-container">
        <div class="row">

            <div id="content" class="col-lg-10 col-sm-10">
                <!-- content starts -->
                <div>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/Admin/Index">Home</a>
                        </li>
                        <li>
                            <a href="/Admin/Users">Users</a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well" data-original-title="">
                                <h2><i class="glyphicon glyphicon-user"></i>Users</h2>

                            </div>
                            <div class="box-content">
                                <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                                    <thead>
                                        <tr>
                                            <th>Users Name</th>
                                            <th>Email</th>                                                                                        
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        
                                            @{
                                                askCodeDataEntities4 cx = new askCodeDataEntities4();
                                                foreach(User u in cx.Users.ToList())
                                                {
                                                    if(u.Username != "admin")
                                                    {
                                                            <tr>
                                                    
                                                    <td>@u.Username</td>
                                                    <td class="center">@u.emailId</td>
                                                    <td class="center">
                                                        <a class="btn btn-success" href="/Admin/ViewUser?id=@u.Username">
                                                            <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                                                            View
                                                        </a>
                                                        <a class="btn btn-info" href="/Admin/EditUser?id=@u.Username">
                                                            <i class="glyphicon glyphicon-edit icon-white"></i>
                                                            Edit
                                                        </a>
                                                        <a class="btn btn-danger"  onclick="Delete('@u.Username');">
                                                            <i class="glyphicon glyphicon-trash icon-white"></i>
                                                            Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                            }
                                            }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div><!--/row-->
                <!-- content ends -->
            </div><!--/#content.col-md-0-->
        </div><!--/fluid-row-->

    </div><!--/.fluid-container-->

    <script>
       function Delete(id)
       {


           swal({
               title: "Are you sure?",
               text: "Your will not be able to recover this imaginary file!",
               type: "warning",
               showCancelButton: true,
               confirmButtonClass: "btn-danger",
               confirmButtonText: "Yes, delete it!",
               closeOnConfirm: false
           },
function ()
{
    window.location.assign("/Admin/DeleteUser?id="+id);

});
       }
    </script>
</body>
