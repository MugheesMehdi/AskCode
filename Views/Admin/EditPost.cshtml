

<h2>EditPost</h2>



@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["Page"] = "EditPosts";
}

@using AskCode.Models
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Post</title>
</head>
<body>

    <div class="ch-container">
        <div class="row">

            <div id="content" class="col-lg-10 col-sm-10">
                <!-- content starts -->
                <div>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/Admin/Index">Home</a>
                        </li>
                        <li>
                            <a href="/Admin/Posts">EditPost</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <div class="row">
                        <div class="box col-md-12">
                            <div class="box-inner">
                                <div class="box-content">

                                    <form class="form-horizontal" action="/Admin/EdittedPost" >
                                        <fieldset>
                                            

                                               
                                          
                                            <input type="hidden" name="CommentId" value="@Model.CommentId" />
                                            <input type="hidden" name="PostId" value="@Model.PostId"  />
                                            <input type="hidden" name="CommentDateTime" value="@Model.CommentDateTime"  />
                                                    <div class="form-group">                                                    

                                                        <h1> @ViewBag.PostTitle</h1>

                                                        <div class="col-md-8"  >
                                                <textarea class="form-control" style="width:500px; height:300px"  id="comment" name="CommentMessage">@Model.CommentMessage.Trim()</textarea>
                                                        </div>
                                                    </div>
                                            <input type="hidden" class="col-md-4 control-label" name="CommentUsername" style="align-content:center" value="@Model.CommentUsername.Trim()" />
                                            <br />
                                                                                              
                                                <input type="submit" class="btn btn-primary" value="Save"/>
                                           
                                        </fieldset>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>